<% include ../partials/header %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <div class="lead">Yelp Camp</div>
      <div class="list-group">
        <div class="list-group-item active">Item 1</div>
        <div class="list-group-item ">Item 2</div>
        <div class="list-group-item ">Item 3</div>
      </div>
    </div>
    <div class="col-md-9">
      <div class="thumbnail">
        <div class="img-responsive"><img src="<%= camp.image %>"></div>
        <div class="caption-full">
          <h4 class="pull-right">$9.00/nigt</h4>
          <h4><a href=""><%=camp.name %></a></h4>
          <p> <%= camp.description %> </p>
          <p><em>Submitted by: <%= camp.author.username %></em></p>
        </div>
      </div>
      <div class="well">
        <div class="text-right">
          <a class="btn btn-success" href="/campgrounds/<%= camp._id%>/comment/new">Add Comment</a>
        </div>
        <hr>
        <% camp.comments.forEach(function(comment){ %>
          <div class="row">
            <div class="col-md-12">
              <strong><%= comment.author.username %></strong>
              <span class="pull-right">10 days ago</span>
              <p><%= comment.text %></p>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
  </div>
</div>

<% include ../partials/footer %>
